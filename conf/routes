# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.GithubController.index(request: Request)

#Github
+ nocsrf

GET      /getRepositoryIssues/:userName/:repositoryName      controllers.GithubController.getIssues(userName : String, repositoryName : String)

GET		/getCommitStats/:userName/:repositoryName						controllers.GithubController.getRepositoryCommits(userName : String, repositoryName : String)

GET     /ws                         controllers.GithubController.ws

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
