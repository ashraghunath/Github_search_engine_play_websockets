# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.GithubController.index(request: Request)

#Github
+ nocsrf
POST     /search                    controllers.GithubController.search(request: Request)

GET      /getUserDetails/:userName      controllers.GithubController.getUserDetails(userName: String)

GET      /getRepositoryDetails/:userName/:repositoryName      controllers.GithubController.getRepositoryDetails(userName : String, repositoryName : String)
GET      /getRepositoryIssues/:userName/:repositoryName      controllers.GithubController.getIssues(userName : String, repositoryName : String)
GET		/getReposByTopics/:topicName							controllers.GithubController.getReposByTopics(topicName : String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
